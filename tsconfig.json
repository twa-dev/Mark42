{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es2015",
    "lib": ["dom", "dom.iterable", "esnext"],
    "strict": true,
    "module": "esnext",
    "moduleResolution": "Node",
    "isolatedModules": true,
    "jsx": "react-jsx",
    "declaration": true,
    "emitDeclarationOnly": true,
    "baseUrl": "src",
    "incremental": true,
    "skipLibCheck": true, // remove after eliminating floating-ui and react-transition-group packages
    "paths": {
      "components/*": ["components/*"],
      "utils/*": ["utils/*"],
      "styles/*": ["styles/*"],
      "hooks/*": ["hooks/*"],
      "images/*": ["images/*"]
    }
  },
  "include": ["src"],
  "exclude": ["**/*.stories.tsx"]
}
